@using NutriView.Shared.Domain;
@inject HttpClient _client

<EditForm Model="@service" OnValidSubmit="@OnValidSubmit">
	<DataAnnotationsValidator />
    <ValidationSummary />
	<fieldset disabled="@Disabled">
		<div class="form-group">
			<label>ServiceName: </label>
			<div>
				<InputText @bind-Value="service.ServiceName" class="form-control" />
				<ValidationMessage For="@(() => service.ServiceName)" />
			</div>
		</div>
		<div class="form-group">
			<label>Service Description: </label>
			<div>
				<InputText @bind-Value="service.ServiceDescription" class="form-control" />
				<ValidationMessage For="@(() => service.ServiceDescription)" />
			</div>
		</div>
		<div class="form-group">
			<label>Service Code: </label>
			<div>
				<InputText @bind-Value="service.ServiceCode" class="form-control" />
				<ValidationMessage For="@(() => service.ServiceCode)" />
			</div>
		</div>
    </fieldset>
	@if (!Disabled)
	{
		<button type="submit" class="btn btn-success btn-block">
			@ButtonText
		</button>
	}
</EditForm>
@code {
	[Parameter] public bool Disabled { get; set; } = false;
	[Parameter] public Service? service { get; set; }
	[Parameter] public string ButtonText { get; set; } = "Save";
	[Parameter] public EventCallback OnValidSubmit { get; set; }
}