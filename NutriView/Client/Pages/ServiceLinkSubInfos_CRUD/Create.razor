@page "/serviceLinkSubInfos/create/"
@using NutriView.Shared.Domain;
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New SubInfoLinkService</h3>
<hr />
<br />

<SLSIFormComponent ButtonText="Create" OnValidSubmit="@CreateSLSI" serviceLinkSubInfo="serviceLinkSubInfo" />
@code {
    ServiceLinkSubInfo serviceLinkSubInfo = new ServiceLinkSubInfo();

    private async Task CreateSLSI()
    {
        await _client.PostAsJsonAsync(Endpoints.ServiceLinkSubInfosEndpoint, serviceLinkSubInfo);
        _navManager.NavigateTo("/serviceLinkSubInfos/");
    }
}

