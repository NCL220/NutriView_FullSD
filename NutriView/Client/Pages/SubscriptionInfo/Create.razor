@page  "/subscriptioninfos/create/"
@using NutriView.Shared.Domain;
@inject HttpClient _client
@inject NavigationManager _navManager

<h3 class="card-title">Create New Subscription</h3>
<hr />
<br />

<FormComponent ButtonText="Create Subscriptioninfo" subscriptionInfo="subscriptioninfo" OnValidSubmit="@CreateSubscriptioninfo" />
@code {
    SubscriptionInfo subscriptioninfo = new SubscriptionInfo();

    private async Task CreateSubscriptioninfo()
    {
        await _client.PostAsJsonAsync(Endpoints.SubscriptionInfosEndpoint, subscriptioninfo);
        _navManager.NavigateTo("/subscriptioninfos/");
    }
}

