@page "/genders/create/"
@using NutriView.Shared.Domain
@inject HttpClient _client
@inject NavigationManager _navManager

<h3>Create New Gender</h3>
<hr />
<br />
<FormComponent ButtonText="Create Gender" OnValidSubmit="@CreateGender" />
@code {
    private Gender gender = new Gender();

    private async Task CreateGender()
    {
        var response = await _client.PostAsJsonAsync(Endpoints.genderEndpoint, gender);
        if (response.IsSuccessStatusCode)
        {
            _navManager.NavigateTo("/genders/");
        }
        else
        {
            // Handle errors here, for example, by showing an error message to the user.
        }
    }
}
